<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>E-Shop</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/Saviourmachine-Chat-Shopping.ico">
  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Styleadmin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.4.0/font/bootstrap-icons.min.css" />
    
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="bg-white">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                <i class="fa fa-user-secret me-2"></i>EShop
            </div>
            
            <div class="list-group list-group-flush my-3">
                <a href="#" class="list-group-item list-group-item-action second-text active">
                    <i class="fa fa-tachometer me-2"></i>Dashboard
                </a>
                <ul class="navbar-nav" id="menu">
                    <li class="nav-item">
                        <a asp-action="Index" asp-area="Admin" asp-controller="Product" class="dropdown-item list-group-item  fw-bold"
                           aria-expanded="false" aria-controls="submenu3">
                            <i class="fa fa-shopping-bag me-2 "></i>Add Products
                        </a>
                    
                    </li>
                    <li class="nav-item">
                        <a href="#" class="list-group-item list-group-item-action fw-bold">
                            <i class="fa fa-list-alt me-2"></i>Product List
                        </a>

                    </li>
                    <hr/>
                    <li>
                        <a href="#" class="list-group-item list-group-item-action fw-bold">
                            <i class="fa fa-tags me-2"></i>Theme
                        </a>
                               
                    </li>
                    <li>
                        <a href="#" class="list-group-item list-group-item-action fw-bold">
                            <i class="fa fa-first-order me-2"></i>Orders
                        </a>

                    </li>


                    <li>
                        <a class="list-group-item list-group-item-action fw-bold" href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                            <i class="fa fa-tags me-2"></i>Manage
                        </a>
                        <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                            <li class="w-100 nav-item ">
                                <a asp-area="Admin" asp-controller="Manage" asp-action="AddBrand" class="list-group-item list-group-item-action bg-transparent second-text active"> <span class="d-none d-sm-inline">Add Brand</span></a>
                            </li>
                           
                            <li class="nav-item">
                                <a asp-area="Admin" asp-controller="Manage" asp-action="AddSizes" class="list-group-item list-group-item-action bg-transparent second-text active"> <span class="d-none d-sm-inline">Add Size</span></a>

                            </li>
                            
                            <li class="nav-item">
                                <a asp-area="Admin" asp-controller="Manage" asp-action="AddGender" class="list-group-item list-group-item-action bg-transparent second-text active"> <span class="d-none d-sm-inline">Add Gender</span></a>

                            </li>
                        </ul>
                    </li>
                </ul>
               
               <hr />
                
               
                <a asp-action="GetAllCategories" asp-controller="Category" asp-area="Admin" class="list-group-item list-group-item-action fw-bold">
                    <i class="fa fa-tags me-2"></i>Category
                </a>
                <a asp-action="AddSubcategory" asp-controller="Manage" asp-area="Admin" class="list-group-item list-group-item-action fw-bold">
                    <i class="fa fa-tags me-2"></i>Sub-Category
                </a>
                
                <hr/>
                 <a asp-area="Admin" asp-action="GetRoles" asp-controller="RoleManagement" class="list-group-item list-group-item-action fw-bold">
                    <i class="fa fa-user-circle-o me-2"></i>Role Management
                </a>
                <a href="#" class="list-group-item list-group-item-action  text-danger fw-bold">
                    <i class="fa fa-power-off me-2"></i>Logout
                </a>
            </div>
            </div>
       
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        @*<div id="page-content-wrapper">*@
      
        <div id="page-content-wrapper" >
            
            <nav class="navbar navbar-expand-lg navbar-light py-4 px-4" style="background-color:#59ab6e;color:white;height:120px">
                <div class="d-flex align-items-center">
                    <i class="fa fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0"></h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
                    <ul class="navbar-nav d-flex ms-auto flex-row me-1">
                    <li class="nav-item me-3 me-lg-0">
                        <a class="nav-link text-black" href="#"><i class="fa fa-envelope mx-1"></i> Contact</a>
                    </li>
                    <li class="nav-item me-3 me-lg-0">
                        <a class="nav-link text-black" href="#"><i class="fa fa-cog mx-1"></i> Settings</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link  text-black" href="#" id="navbarDropdown" role="button"
                           > <i class="fa fa-user mx-1"></i>Welcome Admin </a>
                       
                    </li>
                </ul>
                </div>

          
            </nav>
          
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
       
    </div>



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/jquery-1.11.0.min.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

@* Add line chart js and css*@
    @RenderSection("scriptsjs", required: false)
    @await Component.InvokeAsync("Notyf")
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");
        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
   
</body>
</html>

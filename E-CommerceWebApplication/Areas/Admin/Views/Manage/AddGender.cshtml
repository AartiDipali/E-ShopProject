@model Gender;
@using AspNetCoreHero.ToastNotification.Abstractions;
@inject INotyfService _notyfService;
@{
    ViewBag.Title = "Gender";

}

@if (TempData["Success"] != null)
{
    _notyfService.Success("Your data save sucessfully");
}

<head>
    <style>
        body {
            background-color: #FFEBEE
        }

        .card {
            width: 450px;
            background-color: #fff;
            border: none;
            border-radius: 12px
        }

        .form-control {
            margin-top: 10px;
            height: 48px;
            border-radius: 10px
        }



        .agree-text {
            font-size: 12px
        }

        .terms {
            font-size: 12px;
            text-decoration: none;
            color: #039BE5
        }

        .confirm-button {
            margin-top: 40px;
            height: 50px;
            border-radius: 10px;
            width: 400px;
        }

        label {
            color: gray;
        }
    </style>

</head>
<form method="post" asp-action="AddGender" asp-controller="Manage">
<div class="container mt-5 mb-5 d-flex justify-content-center">
    <div class="card px-1 py-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Add Gender</h4>
             
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label " for="name">
                            Gender
                        </label>
                        <div class="input-group"><input class="form-control" type="text" asp-for="genderName"> </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-success btn-block confirm-button">Submit</button>
        </div>
    </div>
</div>
</form>
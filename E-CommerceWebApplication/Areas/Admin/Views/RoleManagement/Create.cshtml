@model RoleViewModel
<form asp-controller="RoleManagement" asp-action="Create" method="post">
    <div class="row">
        <div class="col-lg-4">Name</div>
        <div class="col-lg-8">
            <input asp-for="RoleName" placeholder="Enter your name" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-4 col-lg-8">
            <button type="submit" value="Create" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

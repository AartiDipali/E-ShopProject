    <div class="col mb-3">

        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add Role
        </button>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
              
                <th scope="col">Role Name</th>
                
                <th>Actions</th>
            </tr>

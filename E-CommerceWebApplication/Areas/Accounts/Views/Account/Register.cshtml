
@model RegistrationViewModel
<form asp-controller="Account" asp-action="Register" method="post" class="mx-1 mx-md-4">
    

   

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
            <label class="form-label" for="form3Example1c">Your Name</label>
            <input type="text" asp-for="Name" id="form3Example1c" class="form-control" />
                
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
            <label class="form-label" for="form3Example3c">Your Email</label>
            <input type="email" asp-for="Email" id="form3Example3c" class="form-control" />
                
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
            <label class="form-label" for="form3Example4c">Password</label>
            <input type="password" asp-for="Password" id="form3Example4c" class="form-control" />
                
            </div>
        </div>

    <div class="row">
        <div class="col-lg-offset-4 col-lg-8">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>


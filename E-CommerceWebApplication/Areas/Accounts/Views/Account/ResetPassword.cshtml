<head>
    <style>
        .custom-centered {
            margin: 0 auto;
            width: 500px;
            background-color: white;
            margin-top: 70px;
            margin-bottom: 150px;
            padding: 30px;
            padding-left: 60px;
            padding-right: 60px;
        }

        .btn-success {
            background-color: #59ab6e !important;
            border-color: #56ae6c !important;
        }

       
    </style>
</head>

@model ResetPasswordModel
<div class="container custom-centered">
 
    <div class="row">
        
            <div class="text-center">
            <h2 class="text-center">Reset Password</h2>
                <div class="mb-3">
                    <p>You can reset your password here.</p>
                </div>
            </div>
        <div class="h-100 d-flex justify-content-center align-items-center col-md-12">
                <div class="col-md-12 col-md-8">
            <form asp-action="ResetPassword" asp-controller="Account">

              
                <div class="mb-3">

                    <input type="text" asp-for="Password" class="form-control" id="email"
                           placeholder="Enter password..">
                </div>
                <div class="mb-3">

                   <input type="text" asp-for="ConfirmPassword" class="form-control" id="email"
                           placeholder="Enter confirmpassword..">
                </div>
                    <input type="hidden" asp-for="Email" class="form-control" />
                    <input type="hidden" asp-for="Token" class="form-control" />
                <div class="mb-3 d-grid">
                    <button type="submit" class="btn  btn-success">
                        Reset Password
                    </button>
                </div>

            </form>
        </div>
        </div>
    </div>
    
</div>
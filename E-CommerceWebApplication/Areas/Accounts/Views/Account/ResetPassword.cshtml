<head>
    <style>
        .custom-centered {
            margin: 0 auto;
            width: 500px;
            background-color: white;
            margin-top: 70px;
            margin-bottom: 150px;
            padding: 30px;
            padding-left: 60px;
            padding-right: 60px;
        }

        .btn-success {
            background-color: #59ab6e !important;
            border-color: #56ae6c !important;
        }

        h4 {
            text-align: center;
            padding-bottom: 40px;
        }
    </style>
</head>

@model ResetPasswordModel
<div class="container custom-centered">
    <h4>Reset Password</h4>
    <div class="row">

        <div class="h-100 d-flex justify-content-center align-items-center col-md-12">

            <form asp-action="ForgotPassword" asp-controller="Account">

                <div class="form-group">

                    <input type="text" asp-for="Password" class="form-control" id="email"
                           placeholder="Enter password..">
                </div>
                <div class="form-group">

                    <input type="text" asp-for="ConfirmPassword" class="form-control" id="email"
                           placeholder="Enter confirmpassword..">
                </div>
                <div class="form-group">
                    <input type="submit" value="Reset Password" class="btn btn-success" />

                </div>

            </form>
        </div>
    </div>
</div>